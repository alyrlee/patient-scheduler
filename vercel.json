{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://patient-scheduler-server-jwbawkf75-ashley-lees-projects.vercel.app/api/$1" },
    { "source": "/health",   "destination": "https://patient-scheduler-server-jwbawkf75-ashley-lees-projects.vercel.app/health" },
    { "source": "/(.*)",     "destination": "/index.html" }
  ],
  "env": { "VITE_API_BASE_URL": "" }
}


